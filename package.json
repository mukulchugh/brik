{
  "name": "brik",
  "version": "0.1.0",
  "private": true,
  "description": "Brik â€” Write once, run native. Compile JSX/TSX widgets to SwiftUI & Jetpack Compose inside React Native.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brikjs/brik.git"
  },
  "bugs": {
    "url": "https://github.com/brikjs/brik/issues"
  },
  "homepage": "https://github.com/brikjs/brik#readme",
  "packageManager": "pnpm@9.6.0",
  "pnpm": {
    "overrides": {
      "react-native": "0.74.7",
      "react": "18.2.0",
      "@types/react": "18.3.24"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "ci": "pnpm lint && pnpm typecheck && pnpm test && pnpm -w build",
    "format": "prettier --write .",
    "prepare": "husky install || true",
    "release": "turbo run build && echo 'Use changesets here if configured'",
    "brik": "pnpm -w exec brik"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/react": "^18.2.74",
    "@types/fs-extra": "^11.0.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "turbo": "^2.1.2",
    "zx": "^8.1.3"
  }
}
