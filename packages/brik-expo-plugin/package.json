{
  "name": "@brik/expo-plugin",
  "version": "0.3.0",
  "description": "Expo config plugin for Brik - automatic iOS/Android setup for widgets",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "expo",
    "expo-plugin",
    "config-plugin",
    "react-native",
    "widgets",
    "ios",
    "android"
  ],
  "author": "Mukul Chugh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukulchugh/brik.git",
    "directory": "packages/brik-expo-plugin"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "expo": ">=49.0.0"
  },
  "dependencies": {
    "@brik/compiler": "workspace:*",
    "@expo/config-plugins": "^9.0.0",
    "xcode": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "expo": "^54.0.0",
    "typescript": "^5.5.4"
  }
}
