{
  "name": "@brik/schemas",
  "version": "0.3.0",
  "description": "Shared schemas and type definitions for Brik",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "schemas",
    "types",
    "validation",
    "zod"
  ],
  "author": "Mukul Chugh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukulchugh/brik.git",
    "directory": "packages/brik-schemas"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "typescript": "^5.5.4"
  }
}
