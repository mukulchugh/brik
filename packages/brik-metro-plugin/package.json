{
  "name": "@brik/metro-plugin",
  "version": "0.3.0",
  "description": "Metro bundler plugin for Brik - integrate with React Native builds",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "metro",
    "metro-plugin",
    "react-native",
    "bundler",
    "widgets"
  ],
  "author": "Mukul Chugh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukulchugh/brik.git",
    "directory": "packages/brik-metro-plugin"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "metro": ">=0.60.0"
  },
  "dependencies": {
    "@brik/compiler": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "typescript": "^5.5.4"
  }
}
