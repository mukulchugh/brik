{
  "name": "@brik/react-native",
  "version": "0.3.0",
  "description": "React Native bridge for Brik - native widgets, Live Activities, and Dynamic Island support",
  "private": false,
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "ios",
    "android",
    "BrikReactNative.podspec",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react-native",
    "widgets",
    "live-activities",
    "dynamic-island",
    "ios",
    "android",
    "swiftui",
    "jetpack-compose",
    "widgetkit",
    "activitykit"
  ],
  "author": "Mukul Chugh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukulchugh/brik.git",
    "directory": "packages/brik-react-native"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "dependencies": {
    "@brik/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.74",
    "@types/react-native": "^0.73.0",
    "typescript": "^5.5.4"
  }
}
