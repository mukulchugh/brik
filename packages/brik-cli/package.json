{
  "name": "@brik/cli",
  "version": "0.3.0",
  "description": "Command-line interface for Brik - build native widgets and setup iOS/Android projects",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "brik": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "brik",
    "cli",
    "react-native",
    "widgets",
    "swiftui",
    "jetpack-compose",
    "ios",
    "android",
    "build-tool"
  ],
  "author": "Mukul Chugh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mukulchugh/brik.git",
    "directory": "packages/brik-cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@brik/compiler": "workspace:*",
    "@brik/schemas": "workspace:*",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^5.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.11",
    "typescript": "^5.5.4"
  }
}
